{
  "name": "peter-dev-portfolio",
  "version": "1.0.0",
  "description": "AI Developer Portfolio with TypeScript - Showcasing modern development practices",
  "main": "index.html",
  "scripts": {
    "dev": "node dev-server-simple.js",
    "build": "node build-split.js",
    "build:bundle": "node build-modern.js",
    "build:legacy": "tsc && node build.js",
    "build:min": "npm run build:bundle && npx terser js/app.js -c -m -o js/app.min.js",
    "clean": "rimraf js/dist js/app.js js/app.min.js js/bundles",
    "serve": "python3 -m http.server 8000",
    "start": "npm run build && npm run serve"
  },
  "keywords": [
    "portfolio",
    "typescript",
    "ai-developer",
    "machine-learning",
    "web-development"
  ],
  "author": "Peter",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
